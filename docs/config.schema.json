{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "oneOf": [
    {
      "type": "object",
      "required": [
        "connection",
        "version"
      ],
      "properties": {
        "connection": {
          "description": "The Snowflake connection configuration.",
          "allOf": [
            {
              "$ref": "#/definitions/ConnectionV1"
            }
          ]
        },
        "model": {
          "description": "The Python model configuration.\n\nIt is mainly used for the snowq model generate command.",
          "default": {
            "output_dir": ""
          },
          "allOf": [
            {
              "$ref": "#/definitions/ModelConfigV1"
            }
          ]
        },
        "pydantic": {
          "description": "The Pydantic options.",
          "default": {
            "model_name_prefix": null,
            "model_name_suffix": null
          },
          "allOf": [
            {
              "$ref": "#/definitions/PydanticOptionsV1"
            }
          ]
        },
        "version": {
          "type": "string",
          "enum": [
            "v1"
          ]
        }
      }
    }
  ],
  "definitions": {
    "ConnectionV1": {
      "type": "object",
      "properties": {
        "account": {
          "description": "The Snowflake account name.",
          "default": {
            "env": "SNOWFLAKE_ACCOUNT"
          },
          "allOf": [
            {
              "$ref": "#/definitions/StringOrEnv"
            }
          ]
        },
        "database": {
          "description": "The Snowflake database.",
          "default": {
            "env": "SNOWFLAKE_DATABASE"
          },
          "allOf": [
            {
              "$ref": "#/definitions/StringOrEnv"
            }
          ]
        },
        "password": {
          "description": "The Snowflake password.\n\nCurrently only password authentication is supported.",
          "default": {
            "env": "SNOWFLAKE_PASSWORD"
          },
          "allOf": [
            {
              "$ref": "#/definitions/StringOrEnv"
            }
          ]
        },
        "role": {
          "description": "The Snowflake role.",
          "default": {
            "env": "SNOWFLAKE_ROLE"
          },
          "allOf": [
            {
              "$ref": "#/definitions/StringOrEnv"
            }
          ]
        },
        "schema": {
          "description": "The Snowflake schema.",
          "default": {
            "env": "SNOWFLAKE_SCHEMA"
          },
          "allOf": [
            {
              "$ref": "#/definitions/StringOrEnv"
            }
          ]
        },
        "user": {
          "description": "The Snowflake user name.",
          "default": {
            "env": "SNOWFLAKE_USER"
          },
          "allOf": [
            {
              "$ref": "#/definitions/StringOrEnv"
            }
          ]
        },
        "warehouse": {
          "description": "The Snowflake warehouse.",
          "default": {
            "env": "SNOWFLAKE_WAREHOUSE"
          },
          "allOf": [
            {
              "$ref": "#/definitions/StringOrEnv"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Env": {
      "type": "object",
      "required": [
        "env"
      ],
      "properties": {
        "env": {
          "description": "The environment variable name.",
          "type": "string"
        }
      }
    },
    "ModelConfigV1": {
      "type": "object",
      "properties": {
        "output_dir": {
          "default": "/Users/s23467/develop/snowq/crates/snowq_config",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PydanticOptionsV1": {
      "type": "object",
      "properties": {
        "model_name_prefix": {
          "description": "The prefix of the model name.",
          "type": [
            "string",
            "null"
          ]
        },
        "model_name_suffix": {
          "description": "The suffix of the model name.",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "StringOrEnv": {
      "description": "Represents a string or an environment variable.",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/Env"
        }
      ]
    }
  }
}
